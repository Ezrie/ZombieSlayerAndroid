<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sewer"
    tools:context=".View.Settings">

    <Button
        android:id="@+id/btnMusic"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="180dp"
        android:background="@android:color/darker_gray"
        android:text="@string/music"
        />
    <Button
        android:id="@+id/btnSoundEffect"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnMusic"
        android:layout_marginTop="12dp"
        android:layout_marginStart="180dp"
        android:background="@android:color/darker_gray"
        android:text="@string/sound_effects"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btnLanguage"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnSoundEffect"
        android:layout_marginStart="180dp"
        android:layout_marginTop="13dp"
        android:background="@android:color/darker_gray"
        android:text="@string/language" />

    <ToggleButton
        android:id="@+id/toggleMusic"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:background="@android:color/white"
        android:layout_alignStart="@id/btnMusic"
        android:layout_alignBottom="@id/btnMusic"
        android:layout_marginStart="210dp"
        android:onClick="buttonClicked"
        />

    <ToggleButton
        android:id="@+id/toggleSoundEff"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:background="@android:color/white"
        android:layout_alignBottom="@id/btnSoundEffect"
        android:layout_alignStart="@id/btnSoundEffect"
        android:layout_marginStart="210dp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/back"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:onClick="buttonClicked"
        />

    <Spinner
        android:id="@+id/spinnerLanguage"
        android:layout_width="200dp"
        android:layout_height="53dp"
        android:layout_alignBottom="@id/btnLanguage"
        android:layout_alignStart="@id/btnLanguage"
        android:layout_marginStart="210dp"
        android:textAlignment="center"
        android:background="@android:color/white"
        />

</RelativeLayout>