<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sewer"
    tools:context=".View.SaveState">

    <Button
        android:id="@+id/button_save1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="100dp"
        android:layout_toStartOf="@id/button_save2"
        android:text="@string/Save"
        android:onClick="buttonClicked"
        />

    <Button
        android:id="@+id/button_save2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:text="@string/Save" />

    <Button
        android:id="@+id/button_save3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="160dp"
        android:layout_toEndOf="@id/button_save2"
        android:text="@string/Save"
        android:onClick="buttonClicked"
        />

    <Button
        android:id="@+id/button_load1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_save2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="100dp"
        android:layout_toStartOf="@id/button_load2"
        android:text="@string/Load" />

    <Button
        android:id="@+id/button_load2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_save2"
        android:layout_alignStart="@id/button_save2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="17dp"
        android:text="@string/Load"
        android:onClick="buttonClicked"
        />

    <Button
        android:id="@+id/button_load3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_save2"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@id/button_load2"
        android:text="@string/Load"
        android:onClick="buttonClicked"
        />
    <Button
        android:id="@+id/btnBack"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@android:color/holo_green_dark"
        android:text="@string/back"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:onClick="buttonClicked"
        />
</RelativeLayout>